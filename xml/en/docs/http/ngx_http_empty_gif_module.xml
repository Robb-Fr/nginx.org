<?xml version="1.0"?>

<!DOCTYPE module SYSTEM "../../../../dtd/module.dtd">

<module name="Module ngx_http_empty_gif_module"
        link="/en/docs/http/ngx_http_empty_gif_module.html"
        lang="en">

<section id="summary">

<para>
The module <literal>ngx_http_empty_gif_module</literal> emits
single-pixel transparent GIF.
</para>

</section>


<section id="example" name="Example Configuration">

<para>
<example>
location = /_.gif {
    empty_gif;
}
</example>
</para>

</section>


<section id="directives" name="Directives">

<directive name="empty_gif">
<syntax/>
<default/>
<context>location</context>

<para>
Turns on module processing in a surrounding location.
</para>

</directive>

</section>

</module>
